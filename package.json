{
  "name": "gradnja-stroski",
  "version": "0.1.0",
  "description": "Offline-first namizna aplikacija za spremljanje stroškov gradnje.",
  "main": "dist-electron/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"tsc -p tsconfig.electron.json --watch\" \"vite --host 0.0.0.0 --port 5173\" \"cross-env VITE_DEV_SERVER_URL=http://localhost:5173 node ./scripts/dev-electron.js\"",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:renderer && npm run build:electron",
    "dist": "npm run build && electron-builder",
    "lint": "eslint --ext .ts,.tsx src",
    "typecheck": "tsc --noEmit",
    "start": "electron .",
    "postinstall": "node ./scripts/postinstall.js"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.5",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "adm-zip": "^0.5.10",
    "archiver": "^6.0.2",
    "clsx": "^2.0.0",
    "electron-builder": "^24.6.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.365.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.3",
    "react-router-dom": "^6.23.0",
    "recharts": "^2.7.2",
    "sonner": "^1.4.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.4",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.gradnja.stroski",
    "productName": "Gradnja Stroški",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraFiles": [],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    }
  }
}
